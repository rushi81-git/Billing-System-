# ─── SERVER ───────────────────────────────────────────────
PORT=5000
NODE_ENV=development

# ─── DATABASE ─────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_NAME=smart_pos_db
DB_USER=root
DB_PASSWORD=your_mysql_password

# ─── JWT ──────────────────────────────────────────────────
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_long
JWT_EXPIRES_IN=8h

# ─── SHOP INFO ────────────────────────────────────────────
SHOP_NAME=My Retail Store
SHOP_ADDRESS=123 Main Street, City, State 000000
SHOP_PHONE=+919999999999
SHOP_EMAIL=shop@example.com

# ─── FAST2SMS (FREE SMS for India) ────────────────────────
# Sign up FREE at: https://www.fast2sms.com
# Get API key:     Dashboard → Dev API → API Key
# Free credits given on signup (~Rs.50 worth of SMS)
# No Twilio account needed!
FAST2SMS_API_KEY=your_fast2sms_api_key_here

# ─── WHATSAPP CLOUD API (Meta) ────────────────────────────
# ⚠️  WHATSAPP_PHONE_NUMBER_ID is the long numeric ID from Meta Developer Console
#     It is NOT your phone number. Find it at:
#     developers.facebook.com → Your App → WhatsApp → API Setup
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_from_meta_console
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_API_VERSION=v18.0

# ─── APP URL ──────────────────────────────────────────────
APP_BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:5000
